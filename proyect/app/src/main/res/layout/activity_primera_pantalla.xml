<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondore"
    tools:context=".view.PrimeraPantallaActivity">

    <!-- Botón Siguiente -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <!-- Título: "Registra tus datos personales" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/baloo_bhaijaan"
            android:text="Registra tus datos personales"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Input Nombre -->
        <EditText
            android:id="@+id/nombreInput"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/input_background"
            android:contentDescription="Campo de texto para nombre"
            android:hint="Nombre"
            android:importantForAccessibility="yes"
            android:inputType="textPersonName"
            android:padding="12dp" />

        <!-- Radio Group Género -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/archivo_black"
            android:text="¿Cuál es tu género?"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Input Fecha de Nacimiento -->
        <RadioGroup
            android:id="@+id/generoRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioHombre"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@drawable/input_background"
                android:text="Hombre" />

            <RadioButton
                android:id="@+id/radioMujer"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@drawable/input_background"
                android:text="Mujer" />

            <RadioButton
                android:id="@+id/radioOtro"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:text="Otro" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/archivo_black"
            android:text="Fecha de Nacimiento"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <AutoCompleteTextView
            android:id="@+id/fechaNacimientoInput"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/input_background"
            android:clickable="true"
            android:contentDescription="Campo de texto para fecha de nacimiento"
            android:focusable="false"
            android:hint="Fecha de Nacimiento"
            android:importantForAccessibility="yes"
            android:inputType="none"
            android:padding="12dp" />


    </LinearLayout>

    <Button
        android:id="@+id/siguienteButton"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="76dp"

        android:backgroundTint="#96085897"
        android:text="Siguiente"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>