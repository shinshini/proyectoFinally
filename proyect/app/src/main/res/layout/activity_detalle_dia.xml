<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleDiaActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del día -->
            <TextView
                android:id="@+id/diaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Planificación para Lunes"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Sección de Desayuno -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desayuno:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/desayunoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huevos revueltos con aguacate y pan integral"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/desayunoRecetaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receta: Bate 2 huevos, agrégalos a un sartén caliente con una cucharada de aceite de oliva, cocina hasta que estén cocidos. Sirve con aguacate y pan integral."
                android:textSize="14sp"
                android:paddingBottom="16dp" />

            <!-- Sección de Merienda -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merienda:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/meriendaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yogur con frutas y nueces"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/meriendaRecetaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receta: Mezcla 1 taza de yogur natural con fresas y un puñado de nueces."
                android:textSize="14sp"
                android:paddingBottom="16dp" />

            <!-- Sección de Almuerzo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almuerzo:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/almuerzoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pollo a la plancha con arroz y vegetales"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/almuerzoRecetaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receta: Cocina 1 pechuga de pollo en un sartén con aceite de oliva. Acompaña con arroz integral y vegetales al vapor."
                android:textSize="14sp"
                android:paddingBottom="16dp" />

            <!-- Sección de Cena -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cena:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/cenaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pescado al horno con ensalada"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/cenaRecetaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receta: Precalienta el horno a 180°C. Hornea un filete de pescado con hierbas y aceite de oliva por 20 minutos. Sirve con una ensalada de lechuga y tomate."
                android:textSize="14sp"
                android:paddingBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>