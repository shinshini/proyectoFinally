<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodeta"
    tools:context=".view.DetalleDiaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del día -->
            <TextView
                android:id="@+id/diaTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/alfa_slab_one"
                android:padding="12dp"
                android:paddingBottom="16dp"
                android:shadowColor="@color/color43"
                android:shadowDx="5"
                android:shadowDy="12"
                android:shadowRadius="10"
                android:text="Planificación para Lunes"
                android:textAlignment="center"
                android:textColor="@color/color48"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Sección de Desayuno -->

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bevan"
                android:paddingTop="8dp"
                android:textColor="@color/color31"
                android:text="DESAYUNO"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/desayunoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desayuno:"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="10dp"/>

            <ImageView
                android:id="@+id/desayunoImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/desayunoIngredientesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes: "
                android:textSize="16sp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/desayunoPreparacionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparación: "
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Sección de Merienda -->
            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bevan"
                android:paddingTop="8dp"
                android:textColor="@color/color31"
                android:text="MERIENDA"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/meriendaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merienda:"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="10dp"/>

            <ImageView
                android:id="@+id/meriendaImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/meriendaIngredientesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes: "
                android:textSize="16sp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/meriendaPreparacionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparación: "
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Sección de Almuerzo -->
            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bevan"
                android:paddingTop="8dp"
                android:textColor="@color/color31"
                android:text="ALMUERZO"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/almuerzoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Almuerzo:"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <ImageView
                android:id="@+id/almuerzoImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingBottom="10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/almuerzoIngredientesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes: "
                android:textSize="16sp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/almuerzoPreparacionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparación: "
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Sección de Cena -->
            <TextView
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bevan"
                android:paddingTop="8dp"
                android:textColor="@color/color31"
                android:text="CENA"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cenaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cena:"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="10dp"/>
            <ImageView
                android:id="@+id/cenaImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/cenaIngredientesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes: "
                android:textSize="16sp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/cenaPreparacionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparación: "
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Botón para volver a Planificación -->
            <Button
                android:id="@+id/volverAPlanificacionButton"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="#96085897"
                android:paddingTop="16dp"
                android:text="Volver a Planificación"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>