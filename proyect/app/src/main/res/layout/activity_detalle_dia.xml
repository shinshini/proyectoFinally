<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleDiaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del día -->
            <TextView
                android:id="@+id/diaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Planificación para Lunes"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Sección de Desayuno -->
            <TextView
                android:id="@+id/desayunoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desayuno:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <ImageView
                android:id="@+id/desayunoImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/desayunoIngredientesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes: "
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/desayunoPreparacionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparación: "
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Sección de Merienda -->
            <TextView
                android:id="@+id/meriendaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merienda:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <ImageView
                android:id="@+id/meriendaImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/meriendaIngredientesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes: "
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/meriendaPreparacionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparación: "
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Sección de Almuerzo -->
            <TextView
                android:id="@+id/almuerzoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almuerzo:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <ImageView
                android:id="@+id/almuerzoImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/almuerzoIngredientesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes: "
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/almuerzoPreparacionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparación: "
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Sección de Cena -->
            <TextView
                android:id="@+id/cenaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cena:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <ImageView
                android:id="@+id/cenaImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/cenaIngredientesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes: "
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/cenaPreparacionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparación: "
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Botón para volver a Planificación -->
            <Button
                android:id="@+id/volverAPlanificacionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volver a Planificación"
                android:layout_gravity="center_horizontal"
                android:paddingTop="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>