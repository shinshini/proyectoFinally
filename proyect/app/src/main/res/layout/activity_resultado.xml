<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Mostrar el resultado del IMC -->
        <TextView
            android:id="@+id/imcTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu IMC es: 0.0"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <!-- Clasificación del IMC según el cálculo -->
        <TextView
            android:id="@+id/clasificacionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clasificación: Normal"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <!-- Botón para recalcular -->
        <Button
            android:id="@+id/recalcularButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recalcular"
            android:layout_marginTop="32dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>